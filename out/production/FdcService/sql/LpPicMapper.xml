<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC
        "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.banksoft.admin.dao.LpPicDao">
    <resultMap id="my_lp_pic" type="com.banksoft.admin.entity.LpPic">
        <id column="f_id" property="id"/>
        <result column="f_lpxx_id" property="lpxxId"/>
        <result column="f_type" property="type"/>
        <result column="f_url" property="url"/>
    </resultMap>
    <insert id="insert" parameterType="com.banksoft.admin.entity.LpPic">
        insert into t_lp_pic(f_id,f_lpxx_id,f_type,f_url)
        values(#{id},#{lpxxId},#{type},#{url})
    </insert>
    <update id="update" parameterType="com.banksoft.admin.entity.LpPic">
        update t_lp_pic
        <set>
            <if test="lpxxId!=null and lpxxId!=''">
                f_lpxx_id = #{lpxxId},
            </if>
            <if test="type!=null and type!=''">
                f_type = #{type},
            </if>
            <if test="url!=null and url!=''">
                f_url = #{url},
            </if>
        </set>
        where f_id=#{id}
    </update>

    <select id="findById" resultMap="my_lp_pic">
        select * from t_lp_pic where f_id=#{id}
    </select>

    <select id="listByLp" parameterType="HashMap" resultMap="my_lp_pic">
        select * from t_lp_pic where f_lpxx_id = #{lpxxId}
    </select>

    <delete id="deleteByLpId" parameterType="HashMap">
        DELETE  from t_lp_pic where f_lpxx_id = #{lpxxId}
    </delete>
</mapper>